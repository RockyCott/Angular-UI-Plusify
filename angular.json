{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-ui-plusify": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": {
              "base": "dist/angular-ui-plusify"
            },
            "index": "src/index.html",
            "polyfills": ["src/polyfills.ts"],
            "tsConfig": "src/tsconfig.app.json",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": [
              "src/styles.scss",
              "node_modules/prismjs/themes/prism-okaidia.css",
              "node_modules/katex/dist/katex.min.css"
            ],
            "scripts": [
              "node_modules/prismjs/prism.js",
              "node_modules/clipboard/dist/clipboard.min.js",
              "node_modules/katex/dist/katex.min.js",
              "node_modules/katex/dist/contrib/auto-render.min.js"
            ],
            "extractLicenses": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true,
            "allowedCommonJsDependencies": ["highlight.js"],
            "browser": "src/main.ts"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "angular-ui-plusify:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "angular-ui-plusify:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "angular-ui-plusify:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "styles": ["src/styles.scss"],
            "scripts": [],
            "assets": ["src/favicon.ico", "src/assets"]
          }
        }
      }
    },
    "angular-ui-plusify-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "prefix": "",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "angular-ui-plusify:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "angular-ui-plusify:serve:production"
            }
          }
        }
      }
    },
    "ngx-plusify-datetime-picker": {
      "projectType": "library",
      "root": "projects/datetime-picker",
      "sourceRoot": "projects/datetime-picker/src",
      "prefix": "NgxPlusify",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/datetime-picker/ng-package.json",
            "tsConfig": "projects/datetime-picker/tsconfig.lib.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/datetime-picker/tsconfig.lib.json"
            },
            "development": {
              "tsConfig": "projects/datetime-picker/tsconfig.lib.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/datetime-picker/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"],
            "main": "projects/datetime-picker/src/test.ts",
            "karmaConfig": "projects/datetime-picker/karma.conf.js"
          }
        }
      }
    },
    "ngx-plusify-moment-adapter": {
      "root": "projects/moment-adapter",
      "sourceRoot": "projects/moment-adapter/src",
      "projectType": "library",
      "prefix": "NgxPlusify",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/moment-adapter/tsconfig.lib.json",
            "project": "projects/moment-adapter/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/moment-adapter/src/test.ts",
            "tsConfig": "projects/moment-adapter/tsconfig.spec.json",
            "karmaConfig": "projects/moment-adapter/karma.conf.js"
          }
        }
      }
    },
    "ngx-markdown-editor": {
      "projectType": "library",
      "root": "projects/ngx-markdown-editor",
      "sourceRoot": "projects/ngx-markdown-editor/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-markdown-editor/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-markdown-editor/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-markdown-editor/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/ngx-markdown-editor/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "ngx-plusify",
      "style": "scss",
      "skipTests": true,
      "standalone": true,
      "changeDetection": "OnPush"
    },
    "@schematics/angular:directive": {
      "prefix": "ngx-plusify",
      "skipTests": true
    },
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  },
  "cli": {
    "analytics": false,
    "packageManager": "yarn"
  }
}
